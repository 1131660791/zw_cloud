<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pojo.mapper.ProductMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.pojo.bean.Product">
        <id column="pid" property="pid"/>
        <result column="product_name" property="productName"/>
        <result column="db_source" property="dbSource"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        pid, product_name, db_source
    </sql>


    <!---->
    <select id="findProductPage" parameterType="com.pojo.bean.Product" resultType="com.pojo.bean.Product">
         select
           *
         from product
    </select>

</mapper>
